@using PagedList.Mvc;
@model PagedList.PagedList<ShopGiay.Models.DONHANG>
@{
    ViewBag.Title = "DanhSachDH";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouts.cshtml";
}

@section SidebarMenu
{
    @Html.Action("SidebarMenu", "AdminHome")
}
@section NavBar{
    @Html.Action("NavBar", "AdminHome")
}
@section Footer
{
    @Html.Action("Footer", "AdminHome")
}
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="dataTable_length">
                                <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6" style="margin-bottom: 10px">
                                    @using (Html.BeginForm("DanhSachDH", "AdminHome", FormMethod.Get))
                                    {
                                        <p>
                                            Kích thước trang: @Html.DropDownList("size", (List<SelectListItem>)ViewBag.Size, new { @onchange = "this.form.submit();", @class = "form-control-sm" })
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            @using (Html.BeginForm("DanhSachDH", "AdminHome", FormMethod.Post))
                            {
                                <div class="col-lg-12" style="margin-bottom: 10px">
                                    <div class="input-group custom-search-form">
                                        <input style="background-color:white" id="search" name="search" type="text" value="" class="form-control" placeholder="Tìm kiếm theo tên" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-success" type="submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th width="80px">Mã ĐH</th>
                                        <th width="180px">Tên khách hàng</th>
                                        <th width="150px">Ngày đặt hàng</th>
                                        <th>Địa chỉ giao</th>
                                        <th width="160px">Tổng tiền</th>
                                        <th width="120px">Thanh toán</th>
                                        <th width="160px">Tình trạng</th>
                                        <th width="200px">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayDatHang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChiGiao)</td>
                                        <td>@string.Format("{0:0,0}", @item.TongTien) VNĐ</td>
                                        <td>@Html.DisplayFor(modelItem => item.ThanhToan)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                                        
                                        <td>
                                            <button class="btn btn-info"> @Html.ActionLink("Chi tiết", "DetailDH", "AdminHome", new {@maDH = item.MaDH}, new { @style = "color: white" })</button>
                                            @if (item.TinhTrang == "Chưa xác nhận")
                                            {
                                                <button class="btn btn-secondary">@Html.ActionLink("Xác nhận", "XacNhanDH", "AdminHome", new { @maDH = item.MaDH, @page = Model.PageNumber, @size = Model.PageSize },new { @style = "color: white" })</button>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 text-right">
                            Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        </div>
                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("DanhSachDH", new { page, size = ViewBag.CurrentSize }))
                </div>
            </div>
        </div>
    </div>
</div>

