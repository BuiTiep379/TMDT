@model PagedList.IPagedList<ShopGiay.Models.SANPHAM>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DanhSachSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouts.cshtml";

}
@section SidebarMenu
{
    @Html.Action("SidebarMenu", "AdminHome")
}
@section NavBar{
    @Html.Action("NavBar", "AdminHome")
}
@section Footer
{
    @Html.Action("Footer", "AdminHome")
}
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách nhân viên</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive" id="sanpham">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="dataTable_length">
                                <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6" style="margin-bottom: 10px">
                                    @using (Html.BeginForm("DanhSachSanPham", "AdminHome", FormMethod.Get))
                                    {
                                        <p>
                                            Kích thước trang: @Html.DropDownList("size", (List<SelectListItem>)ViewBag.Size, new { @onchange = "this.form.submit();", @class = "form-control-sm" })
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            @using (Html.BeginForm("DanhSachSanPham", "AdminHome", FormMethod.Post))
                            {
                                <div class="col-lg-12" style="margin-bottom: 10px">
                                    <div class="input-group custom-search-form">
                                        <input style="background-color:white" id="search" name="search" type="text" value="" class="form-control" placeholder="Tìm kiếm theo tên" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-success" type="submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                        <div class="col-lg-4">
                                            @Html.ActionLink("Thêm mới nhân viên", "AddSanPham", "AdminHome", new { @class = "btn btn-primary" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th width="400px">
                                            @Html.DisplayNameFor(model => model.First().TenSP)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().Anh)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().MaNhanHieu)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().MaLoai)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.First().DonGia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().MoTa)
                                        </th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSP)
                                            </td>
                                            <td>
                                                <img width="50" height="50" src="@Url.Content("~/HinhAnh/HinhAnhSP/" + item.Anh)" alt="">
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NHANHIEU.TenNhanHieu)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LOAISP.TenLoai)
                                            </td>
                                            <td>
                                                @item.DonGia VNĐ
                                            </td>
                                            <td>
                                                @*Nếu tên sách dài quá 100 kí tự sẽ cắt tên sách ra lấy từ 0 đến kí tự 99*@
                                                @if (item.MoTa.Length < 100)
                                                {
                                                    @Html.DisplayFor(modelItem => item.MoTa)
                                                }
                                                else
                                                {

                                                    <span>@item.MoTa.Substring(0, 19)...</span>

                                                }
                                                @*@Html.DisplayFor(modelItem => item.MoTa)*@
                                            </td>
                                            <td>
                                                <button class="btn btn-success">@Html.ActionLink("Chỉnh sửa", "EditSanPham", "AdminHome", new { @masp = item.MaSP }, new { @style = "color: white", })</button>
                                                <button class="btn btn-info">@Html.ActionLink("Chi tiết", "DetailSanPham", "AdminHome", new { @masp = item.MaSP }, new { @style = "color: white", })</button>
                                                <button class="btn btn-primary">  @Html.ActionLink("Hiển thị", "ShowSanPham", "AdminHome", new { @masp = item.MaSP }, new { @style = "color: white", })</button>
                                                <button class="btn btn-danger">  @Html.ActionLink("Xóa", "DeleteSanPham", "AdminHome", new { @masp = item.MaSP }, new { @style = "color: white", })</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 text-right">
                            Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        </div>
                    </div>
                    <ul  class="pagination">
                        <li class="paginate_button page-item">
                            @Html.PagedListPager(Model, page => Url.Action("DanhSachSanPham", new { page, size = ViewBag.CurrentSize }), PagedListRenderOptions.Classic)
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>






