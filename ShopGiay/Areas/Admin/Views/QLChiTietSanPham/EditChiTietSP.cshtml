@model ShopGiay.Models.CHITIETSP
@{
    ViewBag.Title = "EditChiTietSP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouts.cshtml";
}
@section sidebarMenu
{
    @Html.Action("SidebarMenu", "AdminHome")
}

@section headerStarts
{
    @Html.Action("HeaderStarts", "AdminHome")
}
<<h2>CHỈNH SỬA SẢN PHẨM</h2>
<hr />
<div>
    @using (Html.BeginForm())
    {
        if (TempData["ThongBao"] != null)
        {
            <div class="alert alert-success alert-dismissable" role="alert">
                <strong>@TempData["ThongBao"]</strong>
                <button type="button" class="close" data-dismiss="alert" arial-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @Html.AntiForgeryToken()
<div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "control-label col-md-2" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaSP", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaSize, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaSize", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaMau, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaMau", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.SoLuong, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Trở về", "DanhSachChiTietSP", null, new { @class = "btn btn-info" })
            </div>
        </div>
 </div>
    }
</div>

