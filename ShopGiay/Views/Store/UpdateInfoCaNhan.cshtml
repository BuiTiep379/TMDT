@model ShopGiay.Models.KHACHHANG
@{
    ViewBag.Title = "UpdateInfoCaNhan";
    Layout = "~/Views/Shared/_ClientLayouts.cshtml";
}
@section SiteNavBar{
    @{ Html.RenderAction("SiteNavBar", "Store");}
}
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">
                <h3 style="text-align: center">CHANGE INFOMATION</h3>
                <div class="col-12 md-5">
                    <div>
                        <form action="/Store/UpdateInfoCaNhan" method="post">
                            @if (TempData["ThongBao"] != null)
                            {
                                <div class="alert alert-success alert-dismissable" role="alert">
                                    <strong>@TempData["ThongBao"]</strong>
                                    <button type="button" class="close" data-dismiss="alert" arial-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <div class="form-group col-xs-6">
                                @Html.LabelFor(model => model.TenKH, htmlAttributes: new { @class = "control-label col-md-5", @style = "font-weight: bold;" })
                                @Html.TextBoxFor(m => m.TenKH, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.TenKH, "", new { @class = "badge badge-danger" })
                            </div>
                            <div class="form-group col-xs-6">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5", @style = "font-weight: bold;" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "badge badge-danger" })
                            </div>
                            <div class="form-group col-xs-6">
                                @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-5", @style = "font-weight: bold;" })
                                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "badge badge-danger" })

                            </div>
                            <div class="form-group col-xs-6">
                                @Html.LabelFor(model => model.Sdt, htmlAttributes: new { @class = "control-label col-md-5", @style = "font-weight: bold;" })
                                @Html.TextBoxFor(model => model.Sdt, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "badge badge-danger" })
                            </div>

                            <div class="form-group col-xs-6">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                    @Html.ActionLink("Trở về", "Shop", null, new { @class = "btn btn-info" })
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">@ViewBag.TenKH</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">@Html.ActionLink("Chỉnh sửa thông tin", "UpdateInfoCaNhan", new { @maKH = Session["UserID"] })</li>
                        <li class="mb-1">@Html.ActionLink("Đổi mật khẩu", "ChangePassword")</li>
                        <li class="mb-1">@Html.ActionLink("Đơn mua", "DonMua", new { @maKH = Session["UserID"] })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section SiteBlocks3{
}
@section SiteFooter{
    @Html.Action("SiteFooter", "Store")
}

