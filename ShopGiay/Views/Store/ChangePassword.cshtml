@model ShopGiay.Models.KHACHHANG
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_ClientLayouts.cshtml";
}

@section SiteNavBar{
    @{ Html.RenderAction("SiteNavBar", "Store");}
}
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">
                <h3 style="text-align: center">CHANGE PASSWORD</h3>
                <div class="col-12 md-5">
                    <div>
                        <form action="/Store/ChangePassword" method="post">
                            @if (@ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>

                            }
                            @if (TempData["ThongBao"] != null)
                            {
                                <div class="alert alert-success alert-dismissable" role="alert">
                                    <strong>@TempData["ThongBao"]</strong>
                                    <button type="button" class="close" data-dismiss="alert" arial-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <div class="form-group col-xs-6">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                            </div>

                            <div class="form-group col-xs-6">
                                <label for="matKhau">Current password</label>
                                <input type="password" class="form-control" id="matKhau" name="matKhau" placeholder="Old password" required>
                            </div>

                            <div class="form-group col-xs-6">
                                <label for="matKhauMoi">New password</label>
                                <input type="password" class="form-control" id="matKhauMoi" name="matKhauMoi" placeholder="New password" required>
                            </div>

                            <div class="form-group col-xs-6">
                                <label for="xacNhanMatKhau">Confirm Password</label>
                                <input type="password" class="form-control" id="xacNhanMatKhau" name="xacNhanMatKhau" placeholder="Confirm new password" required>
                            </div>

                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success">Submit</button>
                                @Html.ActionLink("Trở về", "Shop", null, new { @class = "btn btn-info" })
                            </div>

                        </form>
                    </div>
                </div>

            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">@ViewBag.TenKH</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">@Html.ActionLink("Chỉnh sửa thông tin", "UpdateInfoCaNhan", new { @maKH = Session["UserID"] })</li>
                        <li class="mb-1">@Html.ActionLink("Đổi mật khẩu", "ChangePassword")</li>
                        <li class="mb-1">@Html.ActionLink("Đơn mua", "DonMua", new { @maKH = Session["UserID"] })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section SiteBlocks3{
}
@section SiteFooter{
    @Html.Action("SiteFooter", "Store")
}

